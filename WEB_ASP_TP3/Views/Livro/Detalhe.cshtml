@model WEB_ASP_TP3.Domain.Livro

@{
    ViewBag.Title = "Detalhe";
}

<div>
    <h3>Detalhes do livro @Model.Titulo</h3>
    <hr />
    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-md-10">
                <dt style="font-size: 20px;">
                    @Html.DisplayNameFor(model => model.Titulo)
                </dt>
                <dd style="font-size: 18px">
                    @Html.DisplayFor(model => model.Titulo)
                </dd>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <dt  style="font-size: 20px;">
                    @Html.DisplayNameFor(model => model.Autor)
                </dt>
                <dd style="font-size: 18px">
                    @Html.DisplayFor(model => model.Autor)
                </dd>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <dt style="font-size: 20px;">
                    @Html.DisplayNameFor(model => model.Editora)
                </dt>
                <dd style="font-size: 18px">
                    @Html.DisplayFor(model => model.Editora)
                </dd>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <dt style="font-size: 20px;">
                    @Html.DisplayNameFor(model => model.Ano)
                </dt>
                <dd style="font-size: 18px">
                    @Html.DisplayFor(model => model.Ano)
                </dd>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <dt style="font-size: 20px;">
                    @Html.DisplayNameFor(model => model.Anotacao)
                </dt>
                <dd style="font-size: 18px">
                    @Html.DisplayFor(model => model.Anotacao)
                </dd>
            </div>
        </div>

    </div>    
</div>
<p>
    <input type="button" class="btn btn-warning" value="Editar" onclick="location.href='@Url.Action("Edit", "Livro", new { id = Model.Id })'" />
    @Html.ActionLink("Voltar", "index", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-primary" })
</p>
